
<h1>list of ingreadient</h1>
<div align="center">
    <% @ingredients.each do |ing| %> 
        <ul class="listing">
    <div class="row">
        <div class="well col-md-4 col-md-offset-4 center">

            <li>
            <h3><%= link_to ing.name.capitalize, ingredient_path(ing)%></h3>
            </li>
            <li><samll><%= pluralize(ing.recipes.count,"recipe") if ing.recipes %></small></li>
        <% if logged_in? && current_chef.admin? %>
        <li> <%=link_to "edit ingredient", edit_ingredient_path(ing) %></li>
        <% end %>
        </div>
    </div>
</div>
</ul>
<% end %>

