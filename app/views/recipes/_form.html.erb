<%= render "shared/error" , obj: @recipe %>
<div class="row">
<div  class="col-md-12">
<%= form_for(@recipe, :html => {class: "horizontal-form", role: "form"}) do |f| %>
<div class="form-group">
    <div class="control-lable col-md-2">
<%= f.label :name %>
<%= f.text_field :name, class: "form-control", placeholder: "name of recipe" , autofocus: true %>
</div>
</div>
<div class="form-group">
    <div class="control-lable col-md-2">
<%= f.label :description %>
<%=f.text_area :description, rows: 10, class: "form-control", placeholder: "description of recipe" , autofocus: true %>
</div>
</div>
</div>
<%=f.submit class: "btn btn-primery btn-lg"%>
 
<% end %>
</div>
<%= link_to "back", recipes_path %>