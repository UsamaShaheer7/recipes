<h1>list of chefs</h1>
<div align="center">
    <% @chefs.each do |chef| %> 
        <ul class="listing">
    <div class="row">
        <div class="well col-md-4 col-md-offset-4 center">
        <li><%= link_to gravatar_for(chef) ,chef_path(chef) %></li>
            <li>
            <h3><%= link_to chef.chefname.capitalize, chef_path(chef) %></h3>
            </li>
            <li><samll><%= pluralize(chef.recipes.count,"recipe") if chef.recipes %></small></li>
            <li><%= chef.email %></li>
        <% if logged_in? && current_chef.admin? || !chef.admin?%>
            <li><%= link_to "Delete", chef_path(chef), data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
                  } %></li>
        <% end %>
        </div>
    </div>
</div>
</ul>
<% end %>